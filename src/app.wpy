<script>
import wepy from 'wepy'
import 'wepy-async-function'

export default class extends wepy.app {
  constructor () {
    super()
    this.use('promisify')
  }
  // -----json部分-----
  config = {
    pages: [
      'pages/index', // 首页
      'pages/exchangeList', // 兑换页商品列表
      'pages/challenge', // 步数挑战
      'pages/rule', // 答题规则
      'pages/topic', // 选择题
      'pages/game', // 游戏
      'pages/gameList', // 游戏列表
      'pages/help', // 帮助中心
      'pages/balance', // 我的余额
      'pages/addssList', // 地址列表
      'pages/order', // 订单
      'pages/exchangeRecording', // 兑换记录
      'pages/signIn', // 签到
      'pages/newAddss', // 新建地址
      'pages/user', // 个人中心
      'pages/exchange', // 兑换
      'pages/cart', // 购物车
      'pages/donation', // 爱心捐赠详情
      'pages/donationList', // 爱心捐赠列表
      'pages/leaderboard', // 好友排行榜
      'pages/commodity' // 商品详情
    ],
    window: {
      backgroundTextStyle: 'light',
      navigationBarBackgroundColor: '#fff',
      navigationBarTitleText: 'WeChat',
      navigationBarTextStyle: 'black'
    }
  }
  // -----json部分结束-----
  // 全局变量
  globalData = {
    userInfo: null,
    openId: null,
    code: null,
    // 线下
    requestUrl: 'http://140.143.203.12:8090',
    // 线上
    // requestUrl: 'https://test.beaconway.cn/api',
    // 图片资源--线下
    imgUrl: 'http://140.143.203.12:8090/',
    // 图片资源--线上
    // imgUrl: 'https://test.beaconway.cn',
    userShopInfo: null,
    shopInfo: null,
    guangGao: null,
    defaultAddssId: null,
    navImg: ['home1', 'exchange', 'game', 'user'],
    navAction: ['action', 'noAction', 'noAction', 'noAction']
  };
  // 获取用户信息
  getUserInfo(cb) {
    const that = this
    if (this.globalData.userInfo) {
      return this.globalData.userInfo
    }
    wepy.getUserInfo({
      success (res) {
        that.globalData.userInfo = res.userInfo
        cb && cb(res.userInfo)
      }
    })
  };
}
</script>
