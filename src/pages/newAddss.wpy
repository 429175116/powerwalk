<template>
  <view>
    <form class="appointment_form" bindsubmit='newAddss'>
      <view class="setInfo">
        <view class="item">
          <view class="label">收货人:</view>
          <input type="text" name="receiver" />
        </view>
        <view class="item">
          <view class="label">联系方式:</view>
          <input type="digit" name="phone" />
        </view>
        <view class="item">
          <view class="label">所在地区:</view>
          <!-- <input type="text" name="area" /> -->
          <picker mode="region" @change="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
            <view class="picker">
              {{region}}
              <!-- {{region[0]}}{{region[1]}}{{region[2]}} -->
            </view>
          </picker>
        </view>
        <view class="item">
          <view class="label">详细地址:</view>
          <input type="text" name="address" />
        </view>
        <view class="item">
          <view class="label">标签:</view>
          <view class="labelCon">
            <block wx:for="{{addressLabel}}" wx:key="{{index}}">
              <view class="{{labelNum==index?'action':''}}" data-labelNum="{{index}}" @tap="getLabelNum">{{addressLabel[index]}}</view>
            </block> 
            <view @tap="hideInvite">
              自定义
              <view class="new">+</view>
            </view>
          </view>
        </view>
      </view>
      <view class="button">
        <button class="mod_btn" formType="submit">确认</button>
      </view>
    </form>
    <view class="mask {{invite}}">
      <form class="appointment_form" bindsubmit="newAddssLabel">
        <view class="bulletBox">
          <view class="bulletBoxTitle">添加自定义标签</view>
          <view class="bulletBoxHide" @tap="hideInvite">×</view>
          <view class="bulletBoxInfo">
            <input type="text" value="{{setLabel}}" name="label" />
          </view>
          <view  class="bulletBoxButton">
            <button formType="submit">添加</button>
          </view>
        </view>
      </form>
    </view>
    <nav @childFn.user="goPage" />
  </view>
</template>

<script>
import wepy from 'wepy'
import nav from '../components/nav' // 底部导航
import citys from '../mixins/citys'
import check from '../mixins/check'
export default class Newaddss extends wepy.page {
  mixins = [citys, check]
  config = {
    'navigationBarTitleText': '新建地址'
  };
  // 生命组件ID
  components = {
  // 底部导航
    nav: nav
  };
  // alias example
  data = {
    userInfo: null,
    addressLabel: ['公司', '家'],
    invite: 'hide',
    setLabel: '',
    labelNum: 0,
    region: '请选择详细地址',
    customItem: '全部'
  };

  methods = {
    // 底部导航跳转
    goPage (url, evt) {
      // 销毁当前页{跳转}
      this.$redirect(url)
    },
    newAddssLabel(e) {
      // 获取值,并去掉前后空格
      this.setLabel = e.detail.value.label
      // 去前后空格
      this.setLabel = this.trim(this.setLabel)
      if (this.setLabel) {
        // 将新增标签加入数组
        this.addressLabel.push(this.setLabel)
        this.$apply()
        // 隐藏弹出框
        this.hideInvite()
      } else {
        wx.showModal({
          title: '',
          content: '不可输入空标签'
        })
      }
    },
    getLabelNum(e) {
      // 点击选中标签
      // 获取数组下标
      this.labelNum = e.currentTarget.dataset.labelnum
      this.$apply()
    },
    bindRegionChange: function (e) {
      this.region = e.detail.value
      let area = ''
      for (let i in this.region) {
        if (this.region[i] !== '全部' && this.region[i] !== '请选择详细地址') {
          area += this.region[i]
        }
      }
      this.region = area
    },
    newAddss(e) {
      // 收货人
      let receiver = e.detail.value.receiver
      // 电话
      let phone = e.detail.value.phone
      // 区域
      let area = this.region
      // 详细地址
      let address = e.detail.value.address
      // 标签
      let labelData = this.addressLabel[this.labelNum]
      if (this.check.isNull(receiver)) {
        wepy.showModal({
          title: '',
          content: '请输入收货人姓名',
          showCancel: false
        })
        return
      }
      if (this.check.isPhone(phone)) {
        wepy.showModal({
          title: '',
          content: '请输入正确的电话格式',
          showCancel: false
        })
        return
      }
      if (this.check.isNull(area) || area === '请选择详细地址') {
        wepy.showModal({
          title: '',
          content: '请选择地区',
          showCancel: false
        })
        return
      }
      if (this.check.isNull(address)) {
        wepy.showModal({
          title: '',
          content: '请输入详细地址',
          showCancel: false
        })
        return
      }
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/api/addShipment`,
        method: 'POST',
        header: {
          AuthrizeOpenId: this.$parent.globalData.openId
        },
        data: {
          // 收货人
          username: receiver,
          // 电话
          mobile: phone,
          // 区域
          area: area,
          // 详细地址
          detail: address,
          // 标签
          tag: labelData
        },
        success: data => {
          if (data.data.success) {
            wx.showToast({
              title: '添加成功',
              duration: 2000,
              mask: true,
              icon: 'success'
            })
            setTimeout(function() {
              wx.navigateBack({ changed: true })
            }, 2000)
          }
        }
      })
    }
  };
  async onLoad(options) {};
  hideInvite() {
    if (this.invite) {
      // 显示弹出框
      this.invite = ''
      // 清空文本框中的值
      this.setLabel = ''
    } else {
      this.invite = 'hide'
    }
    this.$apply()
  };
}
</script>
