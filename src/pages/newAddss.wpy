          <input type="text" name="phone" />
        </view>
        <view class="item">
          <view class="label">所在地区:</view>
          <input type="text" name="area" />
        </view>
        <view class="item">
          <view class="label">详细地址:</view>
          <input type="text" name="address" />
        </view>
        <view class="item">
          <view class="label">标签:</view>
          <view class="labelCon">
            <block wx:for="{{addressLabel}}" wx:key="{{index}}">
              <view class="{{labelNum==index?'action':''}}" data-labelNum="{{index}}" @tap="getLabelNum">{{addressLabel[index]}}</view>
            </block> 
            <view @tap="hideInvite">
              自定义
              <view class="new">+</view>
            </view>
          </view>
        </view>
      </view>
      <view class="button">
        <button class="mod_btn" formType="submit">确认</button>
      </view>
    </form>
    <view class="mask {{invite}}">
      <form class="appointment_form" bindsubmit="newAddssLabel">
        <view class="bulletBox">
          <view class="bulletBoxTitle">添加自定义标签</view>
          <view class="bulletBoxHide" @tap="hideInvite">×</view>
          <view class="bulletBoxInfo">
            <input type="text" value="{{setLabel}}" name="label" />
          </view>
          <view  class="bulletBoxButton">
            <button formType="submit">添加</button>
          </view>
        </view>
      </form>
    </view>
    <nav @childFn.user="goPage" />
  </view>
</template>

<script>
import wepy from 'wepy'
import nav from '../components/nav' // 底部导航
export default class Newaddss extends wepy.page {
  config = {
    'navigationBarTitleText': '新建地址'
  };
  // 生命组件ID
  components = {
  // 底部导航
    nav: nav
  };
  // alias example
  data = {
    userInfo: null,
    addressLabel: ['公司','家'],
    invite: 'hide',
    setLabel: '',
    labelNum: 0
  };

  methods = {
    // 底部导航跳转
    goPage (url, evt) {
      // 销毁当前页{跳转}
      this.$redirect(url)
    },
    newAddssLabel(e) {
      // 获取值,并去掉前后空格
      this.setLabel = e.detail.value.label
      this.setLabel = this.setLabel.replace(/^(\s|\u00A0)+/,'').replace(/(\s|\u00A0)+$/,'')
      if (this.setLabel) {
        // 将新增标签加入数组
        this.addressLabel.push(this.setLabel)
        this.$apply()
        // 隐藏弹出框
        this.hideInvite()
      } else {
        wx.showModal({
          title: '',
          content: '不可输入空标签'
        })
      }
    },
    getLabelNum(e) {
      // 点击选中标签
      // 获取数组下标
      this.labelNum = e.currentTarget.dataset.labelnum
      this.$apply()
    },
    newAddss(e) {
      let receiver = e.detail.value.receiver
      let phone = e.detail.value.phone
      let area = e.detail.value.area
      let address = e.detail.value.address
      let label = this.addressLabel[this.labelNum]
      console.log(receiver)
      console.log(phone)
      console.log(area)
      console.log(address)
      console.log(label)
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/api/addShipment`,
        method: 'POST',
        data: {
          // code: this.code,
          // nick_name: this.userInfo.nickName,
          // avatar: this.userInfo.avatarUrl
        },
        success: function (data) {}
      })
    }
  };
  async onLoad(options) {
    
  };
  hideInvite() {
    if (this.invite) {
      // 显示弹出框
      this.invite = ''
      // 清空文本框中的值
      this.setLabel = ''
    } else {
      this.invite = 'hide'
    }
    this.$apply()
  };

}
</script>
