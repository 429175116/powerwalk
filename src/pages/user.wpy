<script>
import wepy from 'wepy'
import nav from '../components/nav' // 底部导航
export default class User extends wepy.page {
  config = {
    'navigationBarTitleText': '个人中心'
  };
  // 生命组件ID
  components = {
  // 底部导航
    nav: nav
  };
  // alias example
  data = {
    userInfo: null,
    openId: null,
    invite: 'hide',
    loginName: '登陆',
    applyFor: 0
  };

  methods = {
    // 底部导航跳转
    goPage (url, evt) {
      // 销毁当前页{跳转}
      this.$redirect(url)
    }
  };
  async onLoad(options) {
    this.userInfo = this.$parent.globalData.userInfo
    this.openId = this.$parent.globalData.openId
    if (this.openId) {
      this.loginName = `已登陆`
      this.$apply()
    }
    this.getApplyFor()
  };
  // 显示邀请框
  showInvite() {
    this.invite = ''
    this.$apply()
  }
  // 隐藏邀请框
  hideInvite() {
    this.invite = 'hide'
    this.$apply()
  }
  // 请求好友申请个数
  getApplyFor() {
    wx.request({
      url: `${this.$parent.globalData.requestUrl}/api/myFriendRequstCount`,
      method: 'GET',
      header: {
        AuthrizeOpenId: this.$parent.globalData.openId
      },
      success: data => {
        console.log(data)
        if (data.data.success) {
          this.applyFor = data.data.data.friend_request_count
          this.$apply()
        }
      }
    })
  }
  // 登陆点击事件
  async onGotUserInfo() {
    // 获取用户信息
    this.userInfo = await wepy.getUserInfo()
    this.userInfo = this.userInfo.rawData
    // 判断用户信息是否为空
    if (this.userInfo) {
      // 将用户信息字符串转换为josn
      this.userInfo = JSON.parse(this.userInfo)
      // 提交用户信息
      this.setUserInfo(this.userInfo)
      this.$parent.globalData.userInfo = this.userInfo
      this.$apply()
      // 刷新页面
      this.onLoad()
    }
  }
  // 提交用户信息
  async setUserInfo(userInfo) {
    if (this.openId) {
      return
    }
    // 从组件中获取userInfo
    await wepy.login().then(res => {
      this.code = res.code
    })
    // 发送请求,存储用户信息
    await wx.request({
      url: `${this.$parent.globalData.requestUrl}/api/userLogin`,
      method: 'POST',
      data: {
        code: this.code,
        name: this.userInfo.nickName,
        profile: this.userInfo.avatarUrl
      },
      success: function (data) {}
    })
  }
  // // 分享页面
  onShareAppMessage(res) {
    let url = `pages/index?openId=${this.$parent.globalData.openId}`
    return {
      title: '步行的力量',
      desc: '',
      // 图片路径
      imageUrl: 'https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1539347720598&di=a473abbe89ca43f99dc0204945ac9ba3&imgtype=0&src=http%3A%2F%2F5b0988e595225.cdn.sohucs.com%2Fq_70%2Cc_zoom%2Cw_640%2Fimages%2F20180614%2Fc99482ef82ba4328a5b01d42e5ec5ec4.jpeg',
      path: url
    }
  };
  // 添加好友
  goAddFriend() {
    this.$navigate('/pages/addFriend')
  }
  // 好友申请
  goFriendApplyFor() {
    this.$navigate('/pages/friendApplyFor')
  }
  // 好友列表
  goFriendList() {
    this.$navigate('/pages/friendList')
  }
  // 进入兑换记录页
  goExchangeRecording() {
    this.$navigate('/pages/exchangeRecording')
  }
  // 进入购物车
  goCart() {
    this.$navigate('/pages/cart')
  }
  // 进入订单
  goOrder() {
    this.$navigate('/pages/order')
  }
  // 进入签到页
  goSignIn() {
    this.$navigate('/pages/signIn')
  }
  // 充值
  goRecharge() {
    this.$navigate('/pages/balance')
  }
  // 客服
  customerService() {
    this.$navigate('/pages/cart')
  }
  // 进入地址列表
  goAddssList() {
    this.$navigate('/pages/addssList')
  }
  // 进入帮助中心
  goHelp() {
    this.$navigate('/pages/help')
  }
}
</script>
