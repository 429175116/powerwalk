  border-bottom: 1rpx solid #dcdcdc;
}

</style>
<template>
  <view>
    <view class="myInfo friendRanking">
      <block wx:for="{{userList}}" key="index" index="index" item="item">
        <view class="list">
          <view class="userImg">
            <image src="{{item.profile}}" />
          </view>
          <view class="user">
            {{item.nick_name}}
          </view>
          <view class="steal" data-id="{{item.id}}" @tap="delfriend">
            <image src="/img/delete.png" />
          </view>
        </view>
      </block>
      <view class="dataNullTitle" wx:if="{{userList.length==0}}">没有好友</view>
    </view>
    <nav @childFn.user="goPage" />
  </view>
</template>

<script>
import wepy from 'wepy'
import nav from '../components/nav' // 底部导航
import check from '../mixins/check'
export default class Friendlist extends wepy.page {
  config = {
    'navigationBarTitleText': '好友列表'
  };
  mixins = [check]
  // 生命组件ID
  components = {
  // 底部导航
    nav: nav
  };
  // alias example
  data = {
    userInfo: null,
    nextUrl: '',
    userList: null
  };
  methods = {
    // 底部导航跳转
    goPage (url, evt) {
      // 销毁当前页{跳转}
      this.$redirect(url)
    },
    delfriend(e) {
      // 删除好友
      wx.showModal({
        title: '',
        content: '确定删除好友?',
        success: res => {
          if (res.cancel) {
            // 点击取消,默认隐藏弹框
            // return
          } else {
            let userId = e.currentTarget.dataset.id
            wx.request({
              url: `${this.$parent.globalData.requestUrl}/api/deleteFriend/${userId}`,
              method: 'DELETE',
              header: {
                AuthrizeOpenId: this.$parent.globalData.openId
              },
              success: data => {
                console.log(data)
                if (data.data.success) {
                  wx.showModal({
                    title: '',
                    content: '删除成功'
                  })
                  // 获取用户列表
                  this.getUserList()
                } else {
                  wx.showModal({
                    title: '',
                    content: data.data.errmsg
                  })
                }
              }
            })
          }
        }
      })
    }
  };
  async onLoad(options) {
    // 获取用户信息
    this.userInfo = this.$parent.globalData.userInfo
    // 获取用户列表
    this.getUserList()
  };
  // 获取用户列表
  getUserList() {
    wx.request({
      // url: `${this.$parent.globalData.requestUrl}/api/allUsersSearch`,
      url: `${this.$parent.globalData.requestUrl}/api/myfriend`,
      method: 'GET',
      header: {
        AuthrizeOpenId: this.$parent.globalData.openId
      },
      success: data => {
        if (data.data.success) {
          // data = data.data.data.users
          data = data.data.data.friends
          this.userList = data.data
          this.$apply()
          // 获取下一页的请求Id
          this.nextUrl = ''
          // 更新下一页请求地址
          if (data.meta.pagination.links.length !== 0) {
            this.nextUrl = data.meta.pagination.links.next
          }
        }
      }
    })
  }
  /**
   * 页面上拉触底事件的处理函数
   */
  async onReachBottom() {
    if (!this.nextUrl) {
      this.$apply()
      return
    }
    await wx.request({
      url: this.nextUrl,
      method: 'GET',
      header: {
        AuthrizeOpenId: this.$parent.globalData.openId
      },
      success: data => {
        if (data.data.success) {
          data = data.data.data.users
          // data = data.data.data.friends
          // let commodityList = data.data
          // 将新的请求结果加入原有数组  concat连接两个或更多的数组，并返回结果。
          this.userList = this.userList.concat(data.data)
          this.nextUrl = ''
          // 获取下一页的请求Id
          if (data.next_page_url) {
            this.nextUrl = data.next_page_url
          }
          this.$apply()
        }
      }
    })
  }
}
</script>
