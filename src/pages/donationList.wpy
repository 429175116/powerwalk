<template>
  <view>
    <view class="donationTitle">
      凝聚<text>000000000</text>份爱心
    </view>
    <!-- search -->
    <view class="donationSearch">
      <input type="text"  placeholder="查询公益项目" />
      <view class="image">
        <image src="/img/search.png" />
      </view>
    </view>
    <view class="list">
      <block wx:for="{{donationList}}" key="index" index="index" item="item">
        <view class="listCon" data-id="{{item.id}}" @tap="goDonation">
          <view class="info">
            <view class="listTitle">
              {{item.name}}
            </view>
            <view class="infoCon">
              {{item.description}}
            </view>
            <view class="count">
              <text>帮助特困</text>少年上学
            </view>
            <view class="infoCon">
              <view>{{item.donate_adress}}</view>
              <!-- <view>贫困儿童</view> -->
              <view>{{item.goal_step}}</view>
            </view>
          </view>
          <view class="img">
            <image src="{{item.img}}" />
          </view>
        </view>
      </block>
      <view class="dataNullTitle" wx:if="{{donationList.length==0}}">暂无捐赠项目</view>
    </view>
    <nav @childFn.user="goPage" />
  </view>
</template>

<script>
import wepy from 'wepy'
import nav from '../components/nav' // 底部导航
export default class Donationlist extends wepy.page {
  config = {
    'navigationBarTitleText': '爱心捐赠'
  };
  // 生命组件ID
  components = {
  // 底部导航
    nav: nav
  };
  // alias example
  data = {
    userInfo: null,
    donationList: null
  };

  methods = {
    // 底部导航跳转
    goPage(url, evt) {
      // 销毁当前页{跳转}
      this.$redirect(url)
    }
  };
  async onLoad(options) {
    // 获取列表
    this.getDonationList()
  };
  // 获取列表
  getDonationList() {
    wx.request({
      url: `${this.$parent.globalData.requestUrl}/api/projectList`,
      method: 'GET',
      success: data => {
        if (data.data.success) {
          this.donationList = data.data.data.projects.data
          this.$apply()
        }
      }
    })
  }
  // 进入详情页
  goDonation(e) {
    let id = e.currentTarget.dataset.id
    this.$navigate(`/pages/donation?id=${id}`)
  }
}
</script>
