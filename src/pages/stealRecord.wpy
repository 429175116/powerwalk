<script>
import wepy from 'wepy'
import nav from '../components/nav' // 底部导航
import check from '../mixins/check'
export default class Stealrecord extends wepy.page {
  config = {
    'navigationBarTitleText': '被偷纪录'
  };
  mixins = [check]
  // 生命组件ID
  components = {
  // 底部导航
    nav: nav
  };
  // alias example
  data = {
    userInfo: null,
    nextUrl: '',
    steaList: null
  };
  methods = {
    // 底部导航跳转
    goPage (url, evt) {
      // 销毁当前页{跳转}
      this.$redirect(url)
    },
    delfriend(e) {
      
    }
  };
  async onLoad(options) {
    // 获取用户信息
    this.userInfo = this.$parent.globalData.userInfo
    // 获取偷取列表
    this.getRecordList()
  };
  // 获取偷取列表
  getRecordList() {
    wx.request({
      url: `${this.$parent.globalData.requestUrl}/api/theifAndTheifed`,
      method: 'GET',
      header: {
        AuthrizeOpenId: this.$parent.globalData.openId
      },
      success: data => {
        console.log(data)
        if (data.data.success) {
          data = data.data.data.user_step_costs
          let listData = data.data
          listData = this.dataAssembly(listData)
          this.steaList = listData
          this.$apply()
          // 获取下一页的请求Id
          this.nextUrl = ''
          // 更新下一页请求地址
          if (data.meta.pagination.links.length !== 0) {
            this.nextUrl = data.meta.pagination.links.next
          }
        } else {
          wx.showModal({
            title: '',
            content: data.data.errmsg
          })
        }
      }
    })
  }
  // 数据重组
  dataAssembly(listData) {
    var actionDom = ['被摁在地上摩擦,','被追了十八条街,','被塞在麻袋中打了一顿,','被吊起来打,','被群殴,']
    for (let i in listData) {
      if (listData[i].status === '没被偷') {
        let index = (Math.random() * 4) >>> 0
        let action = actionDom[index]
        listData[i].theif = listData[i].theif
        listData[i].status = `偷取被『${this.userInfo.name}』发现,${action}步数`
        listData[i].step = listData[i].description.replace(/[^0-9]/ig,"")
        listData[i].description = `『${listData[i].theif.name}』${listData[i].status}减少${listData[i].step}步`
      } else if (listData[i].status === '偷取失败') {
        let index = (Math.random() * 4) >>> 0
        let action = actionDom[index]
        listData[i].theif = listData[i].theifed
        listData[i].status = `『${this.userInfo.name}』偷取`
        listData[i].step = listData[i].description.replace(/[^0-9]/ig,"")
        listData[i].description = `${listData[i].status}被『${listData[i].theif.name}』发现,${action}步数减少${listData[i].step}步`
      } else if (listData[i].status === '被偷') {
        listData[i].theif = listData[i].theif
        listData[i].status = `偷取了『${this.userInfo.name}』`
        listData[i].step = listData[i].description.replace(/[^0-9]/ig,"")
        listData[i].description = `『${listData[i].theif.name}』${listData[i].status}${listData[i].step}步`
      } else if (listData[i].status === '偷') {
        listData[i].theif = this.userInfo
        listData[i].status = `『${this.userInfo.name}』成功偷取`
        listData[i].step = listData[i].description.replace(/[^0-9]/ig,"")
        listData[i].description = `${listData[i].status}『${listData[i].theif.name}』${listData[i].step}步`
      }
    }
    return listData
  }
  /**
   * 页面上拉触底事件的处理函数
   */
  async onReachBottom() {
    if (!this.nextUrl) {
      this.$apply()
      return
    }
    await wx.request({
      url: this.nextUrl,
      method: 'GET',
      header: {
        AuthrizeOpenId: this.$parent.globalData.openId
      },
      success: data => {
        if (data.data.success) {
          data = data.data.data.user_step_costs
          this.steaList = this.steaList.concat(this.dataAssembly(data.data))
          this.nextUrl = ''
          // 获取下一页的请求Id
          if (data.meta.pagination.links.length !== 0) {
            this.nextUrl = data.meta.pagination.links.next
          }
          console.log(this.nextUrl)
          this.$apply()
        } else {
          wx.showModal({
            title: '',
            content: data.data.errmsg
          })
        }
      }
    })
  }
}
</script>
