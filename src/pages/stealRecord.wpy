<template>
  <view>
    <view class="myInfo friendRanking">
      <block wx:for="{{steaList}}" key="index" index="index" item="item">
        <view class="list">
          <view class="userImg">
            <image src="{{item.theif.profile}}" />
          </view>
          <view class="user">
            <!-- {{item.theif.name}} -->
            {{item.description}}
          </view>
        </view>
      </block>
      <view class="dataNullTitle" wx:if="{{steaList.length==0}}">没有好友</view>
    </view>
    <!-- <nav @childFn.user="goPage" /> -->
  </view>
