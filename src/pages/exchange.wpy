                {{name}}
              </view>
            </view>
            <view>
              <view @tap="quantityDown">-</view>
              <view>{{buyQuantity}}</view>
              <view @tap="quantityUp">+</view>
            </view>
          </view>
        </view>
      </view>
    </view>
    <view class="exchange">
      <view>兑换</view>
    </view>
    <nav @childFn.user="goPage" />
  </view>
</template>

<script>
import wepy from 'wepy'
import nav from '../components/nav' // 底部导航
export default class Exchange extends wepy.page {
  config = {
    'navigationBarTitleText': '兑换'
  };
  // 生命组件ID
  components = {
  // 底部导航
    nav: nav
  };
  // alias example
  data = {
    id: null,
    name: null,
    buyQuantity: null,
    price: null,
    costBeans: null
  };

  methods = {
    // 底部导航跳转
    goPage (url, evt) {
      // 销毁当前页{跳转}
      this.$redirect(url)
    },
    // 增加数量
    quantityUp() {
      if (this.buyQuantity >= this.costBeans) {
        wx.showModal({
          title: '',
          content: '剩余商品不足'
        })
        return
      }
      this.buyQuantity += 1
      this.$apply()
    },
    // 减少数量
    quantityDown() {
      if (this.buyQuantity === 1) {
        return
      }
      this.buyQuantity -= 1
      this.$apply()
    }
  };
  async onLoad(options) {
    console.log(options)
    this.id = options.id
    this.name = options.name
    this.buyQuantity = parseInt(options.buyQuantity)
    this.costBeans = parseInt(options.costBeans)
    this.price = options.price
    this.$apply()
  };
  // 兑换
  exchange() {
    wx.request({
      url: `${this.$parent.globalData.requestUrl}/api/redeemNow`,
      method: 'POST',
      header:{
        AuthrizeOpenId: this.$parent.globalData.openId
      },
      data: {
        // 商品ID
        good_id: this.id,
        // 数量
        num: this.buyQuantity,
        // 地址Id
        shipment_id: ''
      },
      success: data => {
        console.log(data)
      }
    })
  }
}
</script>
