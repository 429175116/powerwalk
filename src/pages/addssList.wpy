<style lang="less">
.list{
  margin-bottom: 110rpx;
  width: 750rpx;
}
.listCon{
  width: 750rpx;
  min-height: 160rpx;
  height: auto;
  border-bottom: 1rpx solid #e5e5e5;
  padding: 20rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.radio{
  width: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.radio image{
  width: 50rpx;
  height: 50rpx;
}
.con{
  color: #333;
  font-size: 30rpx;
  width: 626rpx;
  height: auto;
  word-break:break-all;
}

.newAddss{
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 110rpx;
}
.newAddss view{
  width: 220rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 30rpx;
  color: #333;
  background-color: #e3e3e3;
  border-radius: 10rpx;
}
</style>

<template>
  <view>
    <view class="list">
      <!-- addssList -->
      <block wx:for="{{addssList}}" key="index" index="index" item="item">
        <view class="listCon">
          <view class="radio">
            <image src="/img/delete.png" data-id="{{item.id}}" @tap="delAddss" />
          </view>
          <view class="con" data-id="{{item.id}}" @tap="selAddss">
            <text>{{item.username}},{{item.mobile}},{{item.detail}}</text>
          </view>
        </view>
      </block>
      <view class="dataNullTitle" wx:if="{{addssList.length==0}}">暂无列表数据</view>
    </view>
    <view class="newAddss" @tap="goNewAddsst">
      <view>+ 新建地址</view>
    </view>
    <nav @childFn.user="goPage" />
  </view>
</template>

<script>
import wepy from 'wepy'
import nav from '../components/nav' // 底部导航
export default class Addsslist extends wepy.page {
  config = {
    'navigationBarTitleText': '我的地址'
  };
  // 生命组件ID
  components = {
  // 底部导航
    nav: nav
  };
  // alias example
  data = {
    addssList: null,
    pageType: ''
  };

  methods = {
    // 底部导航跳转
    goPage (url, evt) {
      // 销毁当前页{跳转}
      this.$redirect(url)
    },
    // 选择地址
    selAddss(e) {
      if (!this.pageType) {
        return
      }
      // 获取选中地址的Id,并存入全局变量
      this.$parent.globalData.defaultAddssId = e.currentTarget.dataset.id
      wx.navigateBack({ changed: true })
    },
    // 删除地址
    delAddss(e) {
      let addssId = e.currentTarget.dataset.id
      console.log(`delAddss----${addssId}`)
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/api/deleteShipment/${addssId}`,
        method: 'DELETE',
        header: {
          AuthrizeOpenId: this.$parent.globalData.openId
        },
        success: data => {
          if (data.data.success) {
            wx.showToast({
              title: '删除成功',
              duration: 2000,
              mask: true,
              icon: 'success'
            })
            this.getAddssList()
          }
        }
      })
    }
  };
  async onLoad(options) {
    this.pageType = options.type
    this.getAddssList()
  };
  onShow() {
    this.getAddssList()
  };
  // 获取地址列表
  getAddssList() {
    wx.request({
      url: `${this.$parent.globalData.requestUrl}/api/shipmentList`,
      method: 'GET',
      header: {
        AuthrizeOpenId: this.$parent.globalData.openId
      },
      success: data => {
        if (data.data.success) {
          data = data.data.data.user_shipments
          this.addssList = data.data
          this.$apply()
        }
      }
    })
  }
  // 进入新建地址
  goNewAddsst() {
    this.$navigate('/pages/newAddss')
  }
}
</script>
