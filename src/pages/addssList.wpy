  margin-bottom: 110rpx;
  width: 750rpx;
}
.listCon{
  width: 750rpx;
  min-height: 160rpx;
  height: auto;
  border-bottom: 1rpx solid #e5e5e5;
  padding: 20rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.radio{
  width: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.radio image{
  width: 50rpx;
  height: 50rpx;
}
.con{
  color: #333;
  font-size: 30rpx;
  width: 626rpx;
  height: auto;
  word-break:break-all;
}

.newAddss{
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 110rpx;
}
.newAddss view{
  width: 220rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 30rpx;
  color: #333;
  background-color: #e3e3e3;
  border-radius: 10rpx;
}

checkbox .wx-checkbox-input{
   border-radius: 50%;/* 圆角 */
   width: 40rpx; /* 背景的宽 */
   height: 40rpx; /* 背景的高 */
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked{
   border: none;
   background: #fc6800;
