<template>
  <view>
    <view class="donationSearch">
      <form catchsubmit='friendSearch'>
        <input type="text" name="userName"  placeholder="输入好友昵称查询好友" />
        <button class="image" formType="submit">
          <image src="/img/search.png" />
        </button>
      </form>
    </view>
    <view class="myInfo friendRanking">
      <block wx:for="{{userList}}" key="index" index="index" item="item">
        <view class="list">
          <view class="userImg">
            <image src="{{item.profile}}" />
          </view>
          <view class="user">
            {{item.name}}
          </view>
          <view class="steal" data-id="{{item.id}}" catchtap="addfriend">
            <image src="/img/addFriend.png" />
          </view>
        </view>
      </block>
    </view>
    <view class="dataNullTitle" wx:if="{{userList.length==0}}">暂无用户</view>
    <nav @childFn.user="goPage" />
  </view>
</template>

<script>
import wepy from 'wepy'
import nav from '../components/nav' // 底部导航
import check from '../mixins/check'
export default class Addfriend extends wepy.page {
  config = {
    'navigationBarTitleText': '添加好友'
  };
  mixins = [check]
  // 生命组件ID
  components = {
  // 底部导航
    nav: nav
  };
  // alias example
  data = {
    userInfo: null,
    nextUrl: '',
    userList: null
  };

  methods = {
    // 底部导航跳转
    goPage (url, evt) {
      // 销毁当前页{跳转}
      this.$redirect(url)
    },
    addfriend(e) {
      console.log('asdfasdfasdf')
      // 添加好友
      let userId = e.currentTarget.dataset.id
      console.log(userId)
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/api/addFriend`,
        method: 'POST',
        header: {
          AuthrizeOpenId: this.$parent.globalData.openId
        },
        data: {
          friend_id: userId,
          message: ''
        },
        success: data => {
          console.log(data)
          if (data.data.success) {
            wx.showModal({
              title: '',
              content: '请求已发送,等待对方通过'
            })
          } else {
            wx.showModal({
              title: '',
              content: data.data.errmsg
            })
          }
        }
      })
    }
  };
  async onLoad(options) {
    // 获取用户信息
    this.userInfo = this.$parent.globalData.userInfo
    // 获取用户列表
    this.getUserList()
  };
  // 获取用户列表
  getUserList() {
    wx.request({
      url: `${this.$parent.globalData.requestUrl}/api/allUsersSearch`,
      method: 'GET',
      header: {
        AuthrizeOpenId: this.$parent.globalData.openId
      },
      success: data => {
        if (data.data.success) {
          data = data.data.data.users
          this.userList = data.data
          // 获取下一页的请求Id
          if (data.next_page_url) {
            this.nextUrl = data.next_page_url
          }
          this.$apply()
        }
      }
    })
  }
  // 搜索用户
  friendSearch(e) {
    // 获取值,并去掉前后空格
    let userName = e.detail.value.userName
    // 去前后空格
    userName = this.trim(userName)
    console.log(userName)
    if (this.check.isNull(userName)) {
      wepy.showModal({
        title: '',
        content: '请输入好友昵称',
        showCancel: false
      })
      return
    }
    // 请求
    wx.request({
      url: `${this.$parent.globalData.requestUrl}/api/allUsersSearch`,
      method: 'GET',
      header: {
        AuthrizeOpenId: this.$parent.globalData.openId
      },
      data: {
        nick_name: userName
      },
      success: data => {
        console.log(data)
        if (data.data.success) {
          data = data.data.data.users
          this.userList = data.data
          this.$apply()
        }
      }
    })
  }
  /**
   * 页面上拉触底事件的处理函数
   */
  async onReachBottom() {
    if (!this.nextUrl) {
      this.$apply()
      return
    }
    await wx.request({
      url: this.nextUrl,
      method: 'GET',
      header: {
        AuthrizeOpenId: this.$parent.globalData.openId
      },
      success: data => {
        if (data.data.success) {
          data = data.data.data.users
          // let commodityList = data.data
          // 将新的请求结果加入原有数组  concat连接两个或更多的数组，并返回结果。
          this.userList = this.userList.concat(data.data)
          this.nextUrl = ''
          // 获取下一页的请求Id
          if (data.next_page_url) {
            this.nextUrl = data.next_page_url
          }
          this.$apply()
        }
      }
    })
  }
}
</script>
