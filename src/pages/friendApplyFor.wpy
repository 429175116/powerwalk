</style>
<template>
  <view>
    <view class="myInfo friendRanking">
      <block wx:for="{{userList}}" key="index" index="index" item="item">
        <view class="list">
          <view class="userImg">
            <image src="{{item.from.profile}}" />
          </view>
          <view class="user">
            {{item.from.name}}
          </view>
          <view class="steal" data-id="{{item.from.id}}" data-status="disagree" @tap="applyOperating">
            <image src="/img/delete.png" />
          </view>
          <view class="steal" data-id="{{item.from.id}}" data-status="agree" @tap="applyOperating">
            <image src="/img/invite.png" />
          </view>
        </view>
      </block>
      <view class="dataNullTitle" wx:if="{{userList.length==0}}">暂无申请列表数据</view>
    </view>
    <!-- <nav @childFn.user="goPage" /> -->
  </view>
</template>

<script>
import wepy from 'wepy'
import nav from '../components/nav' // 底部导航
import check from '../mixins/check'
export default class Friendapplyfor extends wepy.page {
  config = {
    'navigationBarTitleText': '好友申请'
  };
  mixins = [check]
  // 生命组件ID
  components = {
  // 底部导航
    nav: nav
  };
  // alias example
  data = {
    userInfo: null,
    nextUrl: '',
    userList: null
  };

  methods = {
    // 底部导航跳转
    goPage (url, evt) {
      // 销毁当前页{跳转}
      this.$redirect(url)
    },
    applyOperating(e) {
      // 添加好友
      let userId = e.currentTarget.dataset.id
      let status = e.currentTarget.dataset.status
      let statusShow = ''
      if (status === 'agree') {
        statusShow = '通过申请操作成功'
      } else {
        statusShow = '拒绝申请操作成功'
      }
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/api/agreeOrDisagree`,
        method: 'POST',
        header: {
          AuthrizeOpenId: this.$parent.globalData.openId
        },
        data: {
          id: userId,
          status: status
        },
        success: data => {
          console.log(data)
          if (data.data.success) {
            wx.showModal({
              title: '',
              content: statusShow
            })
            // 获取用户列表
            this.getApplyForList()
          } else {
            wx.showModal({
              title: '',
              content: data.data.errmsg
            })
          }
        }
      })
    }
  };
  async onLoad(options) {
    // 获取用户信息
    this.userInfo = this.$parent.globalData.userInfo
    // 获取用户列表
    this.getApplyForList()
  };
  // 获取用户列表
  getApplyForList() {
    wx.request({
      // url: `${this.$parent.globalData.requestUrl}/api/allUsersSearch`,
      url: `${this.$parent.globalData.requestUrl}/api/myFriendRequest`,
      method: 'GET',
      header: {
        AuthrizeOpenId: this.$parent.globalData.openId
      },
      success: data => {
        if (data.data.success) {
          // data = data.data.data.users
          data = data.data.data.add_friend_notices
          this.userList = data.data
          this.$apply()
          // 获取下一页的请求Id
          this.nextUrl = ''
          // 更新下一页请求地址
          if (data.meta.pagination.links.length !== 0) {
            this.nextUrl = data.meta.pagination.links.next
          }
        }
      }
    })
  }
  /**
   * 页面上拉触底事件的处理函数
   */
  async onReachBottom() {
    if (!this.nextUrl) {
      this.$apply()
      return
    }
    await wx.request({
      url: this.nextUrl,
      method: 'GET',
      header: {
        AuthrizeOpenId: this.$parent.globalData.openId
      },
      success: data => {
        if (data.data.success) {
          data = data.data.data.add_friend_notices
          // 将新的请求结果加入原有数组  concat连接两个或更多的数组，并返回结果。
          this.userList = this.userList.concat(data.data)
          this.nextUrl = ''
          // 获取下一页的请求Id
          if (data.next_page_url) {
            this.nextUrl = data.next_page_url
          }
          this.$apply()
        }
      }
    })
  }
}
</script>
